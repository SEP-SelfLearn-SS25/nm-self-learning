{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "singularName": "lesson",
    "pluralName": "lessons",
    "displayName": "Lesson",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "lessonId": {
      "type": "uid",
      "default": "tbd",
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true,
      "minLength": 3,
      "targetField": "title"
    },
    "title": {
      "type": "string",
      "required": true,
      "minLength": 3
    },
    "subtitle": {
      "type": "text",
      "required": false
    },
    "description": {
      "type": "richtext"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "authors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::author.author",
      "inversedBy": "lessons"
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "content.article",
        "content.video",
        "content.youtube-video"
      ]
    },
    "quiz": {
      "type": "json"
    }
  }
}
